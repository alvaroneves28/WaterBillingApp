@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>

@inject UserManager<WaterBillingApp.Data.Entities.ApplicationUser> UserManager
@{
    // Get the current logged-in user asynchronously
    var currentUser = await UserManager.GetUserAsync(User);
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Set the page title dynamically from the view -->
    <title>@ViewData["Title"] - WaterBillingApp</title>

    <!-- Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <!-- Local Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Custom site stylesheets with cache busting -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WaterBillingApp.styles.css" asp-append-version="true" />

    <!-- Syncfusion Bootstrap 5 theme -->
    <link href="https://cdn.syncfusion.com/ej2/30.1.39/bootstrap5.css" rel="stylesheet" />
</head>
<body>
    <header>
        <!-- Responsive navbar with dark primary background and shadow -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary shadow-sm mb-3">
            <div class="container-fluid">
                <!-- Brand link to home page -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WaterBillingApp</a>

                <!-- Hamburger button for toggling navbar on small screens -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Collapsible navbar content -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <div class="d-flex ms-auto align-items-center">
                        <!-- Show profile image if user is authenticated -->
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            if (currentUser != null && !string.IsNullOrEmpty(currentUser.ProfileImagePath))
                            {
                                <!-- User's uploaded profile photo -->
                                <img src="@currentUser.ProfileImagePath" alt="Profile Photo" width="40" class="rounded-circle me-2" />
                            }
                            else
                            {
                                <!-- Default profile placeholder image -->
                                <img src="/images/profiles/perfil.png" alt="No Photo" width="40" class="rounded-circle me-2" />
                            }
                        }

                        <!-- Partial view for login/logout links -->
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main container for page content -->
    <div class="container">
        <main role="main" class="pb-5">
            <!-- Render the content of the views -->
            @RenderBody()
        </main>
    </div>

    <!-- Footer with copyright -->
    <footer class="border-top footer bg-dark text-light py-3">
        <div class="container">
            &copy; 2025 - WaterBillingApp
        </div>
    </footer>

    <!-- Scripts section -->
    <!-- jQuery library -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap JavaScript bundle (includes Popper) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Syncfusion JS components -->
    <script src="https://cdn.syncfusion.com/ej2/30.1.39/dist/ej2.min.js"></script>

    <!-- Custom site JavaScript with cache busting -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Optional section for page-specific scripts -->
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
