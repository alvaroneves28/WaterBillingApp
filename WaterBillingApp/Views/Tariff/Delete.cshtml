@model WaterBillingApp.Data.Entities.TariffBracket

@{
    ViewData["Title"] = "Delete Tariff";
}

<h1>Delete Tariff</h1>

<h4>Are you sure you want to delete this tariff?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Min Volume</dt>
        <dd class="col-sm-10">@Model.MinVolume</dd>
        <dt class="col-sm-2">Max Volume</dt>
        <dd class="col-sm-10">@Model.MaxVolume</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.PricePerCubicMeter.ToString("C")</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ManageTariffs" asp-controller="Tariff" class="btn btn-secondary">Cancel</a>
    </form>
</div>
