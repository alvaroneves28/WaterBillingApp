@model WaterBillingApp.Data.Entities.TariffBracket

@{
    // Set the page title for layout and browser tab
    ViewData["Title"] = "Delete Tariff";
}

<h1>Delete Tariff</h1>

<h4>Are you sure you want to delete this tariff?</h4>

<div>
    @* Display tariff details to confirm what is being deleted *@
    <dl class="row">
        <dt class="col-sm-2">Min Volume</dt>
        <dd class="col-sm-10">@Model.MinVolume</dd>

        <dt class="col-sm-2">Max Volume</dt>
        <dd class="col-sm-10">@Model.MaxVolume</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.PricePerCubicMeter.ToString("C")</dd>
    </dl>

    @* Form to confirm deletion, posts back to DeleteConfirmed action *@
    <form asp-action="DeleteConfirmed" method="post">
        @* Hidden field to pass the tariff ID to the server *@
        <input type="hidden" asp-for="Id" />

        @* Button to submit deletion *@
        <button type="submit" class="btn btn-danger">Delete</button>

        @* Link to cancel deletion and go back to ManageTariffs view *@
        <a asp-action="ManageTariffs" asp-controller="Tariff" class="btn btn-secondary">Cancel</a>
    </form>
</div>
