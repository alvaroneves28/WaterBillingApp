@{
    // Set the page title shown in the layout and browser tab
    ViewData["Title"] = "Welcome";
}

<!-- Page heading displaying the title -->
<h2 class="mb-4">@ViewData["Title"]</h2>

<!-- Optional informational message passed from the controller -->
@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-info" role="alert">
        @ViewBag.Message
    </div>
}

<!-- Confirmation message for the user -->
<p>Your account has been successfully confirmed and your password has been set.</p>
<p>You can now log in to access your account.</p>

<!-- Button to navigate back to the homepage -->
<a class="btn btn-primary mt-3" asp-controller="Home" asp-action="Index">
    Go to Homepage
</a>
