@model IEnumerable<WaterBillingApp.Data.Entities.Customer>

@{
    // Set the page title shown in layout and browser tab
    ViewData["Title"] = "Customer Manager";
}

<!-- Display error message alert if TempData contains an error -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <!-- Button to close the alert -->
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Display success message alert if TempData contains a success message -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <!-- Button to close the alert -->
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Header section with page title and button to create a new customer -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Customer Management</h1>
    <a asp-action="Create" class="btn btn-success">
        <!-- Bootstrap icon for "add" -->
        <i class="bi bi-plus-circle"></i> Add New Customer
    </a>
</div>

<!-- Table listing all customers -->
<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>NIF</th>
            <th>Email</th>
            <th>Address</th>
            <th>Contact</th>
            <th>Status</th>
            <th style="width: 160px;">Actions</th> <!-- Fixed width for action buttons -->
        </tr>
    </thead>
    <tbody>
        <!-- Loop through each customer in the model -->
        @foreach (var customer in Model)
        {
            <tr>
                <!-- Display customer details -->
                <td>@customer.FullName</td>
                <td>@customer.NIF</td>
                <td>@customer.Email</td>
                <td>@customer.Address</td>
                <td>@customer.Phone</td>
                <td>
                    <!-- Display active or inactive badge based on IsActive property -->
                    @if (customer.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </td>
                <td>
                    <!-- Edit button with pencil icon -->
                    <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-sm btn-warning me-1" title="Edit">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <!-- Delete button with trash icon, includes confirmation dialog -->
                    <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-sm btn-danger" title="Delete"
                       onclick="return confirm('Are you sure you want to delete this customer?');">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
