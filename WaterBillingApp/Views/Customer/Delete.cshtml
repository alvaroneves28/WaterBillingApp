@model WaterBillingApp.Data.Entities.Customer

<!-- Page heading -->
<h1>Confirm Deletion</h1>

<!-- Confirmation message showing the customer's full name -->
<p>Are you sure you want to delete the customer: <strong>@Model.FullName</strong>?</p>

<!-- Form to confirm deletion -->
<form asp-action="Delete" method="post">
    <!-- Hidden input to send the customer's ID -->
    <input type="hidden" asp-for="Id" />

    <!-- Submit button to confirm deletion -->
    <button type="submit" class="btn btn-danger">Yes, Delete</button>

    <!-- Cancel button to go back to the customer list -->
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
