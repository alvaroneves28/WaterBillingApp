@{
    // Sets the page title, used by the layout or for dynamic display
    ViewData["Title"] = "Password Reset Successful";
}

<!-- Responsive layout centered vertically and horizontally using Bootstrap -->
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-md-6 col-lg-5">
        <!-- Card with shadow for visual emphasis -->
        <div class="card shadow-lg">
            <div class="card-body text-center p-4">
                <!-- Header with success icon -->
                <h2 class="text-success mb-3">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    Password Reset Successful
                </h2>

                <!-- Confirmation message -->
                <p class="mb-4">Your password has been successfully reset.</p>

                <!-- Button to redirect the user to the login page -->
                <a asp-action="Login" asp-controller="Account" class="btn btn-primary">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Go to Login
                </a>
            </div>
        </div>
    </div>
</div>
