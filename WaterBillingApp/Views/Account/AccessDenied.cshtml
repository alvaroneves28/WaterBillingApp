@{
    ViewData["Title"] = "Access Denied";
}

<!-- Page heading -->
<h1 class="text-danger">Access Denied</h1>

<!-- Inform the user about the permission issue -->
<p class="lead">You do not have permission to access this page.</p>

<!-- Optional back link if ReturnUrl is provided -->
@if (ViewData["ReturnUrl"] != null)
{
    <p><a href="@ViewData["ReturnUrl"]" class="btn btn-secondary">Go Back</a></p>
}

<!-- Link to Home page -->
<p><a href="@Url.Action("Index", "Home")" class="btn btn-primary">Home Page</a></p>
