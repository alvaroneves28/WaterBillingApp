
@{
    ViewData["Title"] = "ForgotPasswordConfirmation";
}

<h2>Forgot Password</h2>
<p>If an account with that email exists, a password reset link has been sent.</p>

@if (TempData["ResetLink"] != null)
{
    <p><strong>Debug reset link (show only in dev):</strong></p>
    <p><a href="@TempData["ResetLink"]">@TempData["ResetLink"]</a></p>
}


