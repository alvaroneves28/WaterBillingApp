@model ForgotPasswordViewModel

@{
    // Set the page title shown in the browser tab and page header
    ViewData["Title"] = "Forgot Password";
}

<!-- Page heading -->
<h2>@ViewData["Title"]</h2>

<!-- Display any status message (e.g. "Reset link sent") stored in TempData -->
@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-info">@TempData["StatusMessage"]</div>
}

<!-- Form to request a password reset link -->
<form asp-action="ForgotPassword" method="post">
    <div class="form-group">
        <!-- Label for the Email input, using the model metadata -->
        <label asp-for="Email"></label>

        <!-- Input field bound to the Email property of the view model -->
        <input asp-for="Email" class="form-control" />

        <!-- Validation message for the Email field -->
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <!-- Submit button to send the reset password link -->
    <button type="submit" class="btn btn-primary mt-2">Send Reset Link</button>
</form>

<!-- Section to include client-side validation scripts -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
