@model WaterBillingApp.Models.ChangePasswordViewModel

@{
    // Set the page title for layout and SEO purposes
    ViewData["Title"] = "Change Password";
}

<!-- Page heading showing the current page title -->
<h2 class="mb-4">@ViewData["Title"]</h2>

<!-- Display success message if available in TempData -->
@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["StatusMessage"]
    </div>
}

<!-- Password change form -->
<form asp-action="ChangePassword" method="post" class="needs-validation" novalidate>
    <!-- Current password input -->
    <div class="mb-3">
        <label asp-for="CurrentPassword" class="form-label"></label>
        <input asp-for="CurrentPassword" class="form-control" type="password" />
        <!-- Validation message placeholder for current password -->
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>

    <!-- New password input -->
    <div class="mb-3">
        <label asp-for="NewPassword" class="form-label"></label>
        <input asp-for="NewPassword" class="form-control" type="password" />
        <!-- Validation message placeholder for new password -->
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <!-- Confirm new password input -->
    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" />
        <!-- Validation message placeholder for password confirmation -->
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <!-- Submit button to trigger password change -->
    <button type="submit" class="btn btn-primary">Change Password</button>
</form>

@section Scripts {
    <!-- Partial view to include client-side validation scripts -->
    <partial name="_ValidationScriptsPartial" />
}
