@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Video background container */
    .video-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: -1; /* behind the content */
    }

        /* Video covers the entire screen */
        .video-background video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    /* Content overlay above the video */
    .content-overlay {
        position: relative;
        z-index: 1;
        min-height: 100vh;
        /* Semi-transparent dark background for readability */
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        padding-top: 3rem;
        padding-bottom: 3rem;
    }
</style>

<!-- Background video container -->
<div class="video-background">
    <video autoplay muted loop playsinline>
        <source src="videos/water-background.mp4" type="video/mp4" />
        Your browser does not support the video tag.
    </video>
</div>

<!-- Content displayed over the video -->
<div class="content-overlay">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h1 class="display-3 fw-bold text-primary">Welcome to WaterBillingApp</h1>
            <p class="lead fs-4">
                Discover how to manage your water consumption easily with our app.
            </p>
        </div>

        <div class="row justify-content-center">
            <!-- Login card -->
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <!-- Login icon -->
                        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-box-arrow-in-right text-primary mb-3" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M6 3a.5.5 0 0 1 .5.5v3h5a.5.5 0 0 1 0 1h-5v3a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 6 3z" />
                            <path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708L9.172 5.964a.5.5 0 1 0-.708.708L10.293 8l-1.83 1.828a.5.5 0 0 0 .708.708l2.682-2.682z" />
                        </svg>
                        <h5 class="card-title mb-2">Login to Your Account</h5>
                        <p class="card-text text-center text-muted text-dark">Access your billing information and manage your account securely.</p>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary mt-3 px-4">Login</a>
                    </div>
                </div>
            </div>

            <!-- Request meter card -->
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <!-- Request meter icon -->
                        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-file-earmark-text-fill text-primary mb-3" viewBox="0 0 16 16">
                            <path d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V5.707a1 1 0 0 0-.293-.707L9.293 0zM9 1.5L13.5 6H10a1 1 0 0 1-1-1V1.5zM5 10h6v1H5v-1zm0-2h6v1H5v-1z" />
                        </svg>
                        <h5 class="card-title mb-2">Request a Meter</h5>
                        <p class="card-text text-center text-muted text-dark">No account needed, easily request a new meter.</p>
                        <a asp-controller="MeterRequest" asp-action="CreateRequest" class="btn btn-primary mt-3 px-4">Request Meter</a>
                    </div>
                </div>
            </div>

            <!-- Register account card -->
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <!-- Register icon -->
                        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-person-plus text-primary mb-3" viewBox="0 0 16 16">
                            <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                            <path fill-rule="evenodd" d="M13 8a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2H10a.5.5 0 0 1 0-1h2.5V5.5a.5.5 0 0 1 1 0v2z" />
                        </svg>
                        <h5 class="card-title mb-2">Register a New Account</h5>
                        <p class="card-text text-center text-muted text-dark">Create an account to access all features and manage your profile. (Admin Only)</p>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-primary mt-3 px-4">Register</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
