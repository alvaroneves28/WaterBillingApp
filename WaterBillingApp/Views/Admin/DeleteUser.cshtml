@using WaterBillingApp.Data.Entities
@model ApplicationUser // Sets the model for this view as an ApplicationUser object

@{
    // Sets the page title (used by the main layout)
    ViewData["Title"] = "Delete User";
}

<h1>@ViewData["Title"]</h1>

<!-- Confirmation message -->
<h3>Are you sure you want to delete this user?</h3>

<!-- Display of key information about the user to be deleted -->
<div>
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">UserName</dt>
        <dd class="col-sm-10">@Model.UserName</dd>
    </dl>
</div>

<!-- Form to confirm the deletion of the user -->
<form asp-action="DeleteUserConfirmed" method="post">
    @Html.AntiForgeryToken() <!-- Anti-forgery token to prevent CSRF -->
    <!-- Hidden field with the user's ID -->
    <input type="hidden" asp-for="Id" />

    <!-- Button to submit the deletion -->
    <button type="submit" class="btn btn-danger">Delete</button>

    <!-- Button to cancel and return to the user management page -->
    <a asp-action="ManageUsers" class="btn btn-secondary">Cancel</a>
</form>
