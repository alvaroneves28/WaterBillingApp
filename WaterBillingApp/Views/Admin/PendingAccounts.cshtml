@using WaterBillingApp.Data.Entities
@model IEnumerable<Notification>

<h2>Pending Account Creations</h2>

@if (!Model.Any())
{
    <p>No new account requests.</p>
}
else
{
    <ul class="list-group">
        @foreach (var notif in Model)
        {
            <li class="list-group-item">
                @notif.Message <br />
                <small class="text-muted">@notif.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                <form asp-action="CreateUserFromNotification" method="post" class="mt-2">
                    <input type="hidden" name="notificationId" value="@notif.Id" />
                    <button type="submit" class="btn btn-primary btn-sm float-end">Create Account</button>
                </form>
            </li>
        }
    </ul>
}
