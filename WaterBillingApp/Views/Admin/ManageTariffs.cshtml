@model IEnumerable<WaterBillingApp.Data.Entities.TariffBracket>
@{
    ViewData["Title"] = "Manage Tariffs";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Tariff</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Min Volume</th>
            <th>Max Volume</th>
            <th>Price per m³</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MinVolume</td>
                <td>@(item.MaxVolume.HasValue? item.MaxVolume.Value.ToString() : "No limit")</td>
                <td>@item.PricePerCubicMeter.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
